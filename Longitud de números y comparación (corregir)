#include <iostream>
#include <string>

using namespace std;

int main()
{
	string numero;
	int longitud, d1, d2, result;
	cout << "Ingrese el nÃºmero: ";
	getline(cin, numero);
	longitud = numero.lenght();
	for (int i=0;i< longitud/2;i++) {
		d1 = numero.at(i) - '0';
		d2 = numero.at(longitud - 1 - 1) - '0';
		result = d1 - d2;
		cout << "la diferencia entre " << d1 << "y" << d2 << "es: "<<result;
		
	}
	return 0;
}
